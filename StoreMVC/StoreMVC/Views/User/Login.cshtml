
@{
	ViewBag.Title = "Login";
}

<h2 class="text-center">Login</h2>
<div class="row border-dark border-3 mt-3">
	<form method="post" asp-action="Login" class="d-flex align-items-center justify-content-center flex-column">
		<label>Email:</label>
		<input type="text" name="email" /><br />

		<label>Password:</label>
		<input type="password" name="password" /><br />

		<button type="submit" class="btn btn-primary">Login</button>

		<p class="text-danger mx-auto my-5">@ViewBag.Error</p>
	</form>

</div>
<div class=" w-100">
	
</div>
